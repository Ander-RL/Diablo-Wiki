<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/first_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/diablo_light"
        android:padding="10dp"
        android:text="@string/header_intro"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_dark"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_cabeza_diablo1"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:contentDescription="@string/contentDescription_logo1"
                app:srcCompat="@drawable/logo_cabeza" />

            <TextView
                android:id="@+id/first_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/formal_436_bt"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="40dp"
                android:paddingRight="15dp"
                android:paddingBottom="40dp"
                android:text="@string/first_quote"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/first_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/formal_436_bt"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="40dp"
                android:paddingRight="15dp"
                android:paddingBottom="40dp"
                android:text="@string/first_intro"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/logo_cabeza_diablo2"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:contentDescription="@string/contentDescription_logo2"
                app:srcCompat="@drawable/logo_cabeza_diablo2" />

            <TextView
                android:id="@+id/first_introduction2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/formal_436_bt"
                android:padding="15dp"
                android:text="@string/first_intro2"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>